[
  {
    "name": "theme_info",
    "theme_name": "Premier",
    "theme_version": "7.1.0",
    "theme_author": "Kajabi",
    "theme_documentation_url": "https://themes.kajabi.com/changelog/product-themes/premier",
    "theme_support_url": "https://learn.kajabi.com"
  },
  {
    "name": "Favicon",
    "elements": [
      {
        "type": "header",
        "content": "Favicon"
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon Image",
        "fit": "crop",
        "width": 32,
        "height": 32,
        "info": "Must be a 32x32 PNG file. Transparency is supported. Please allow some time for favicon to change."
      }
    ]
  },

  {
    "name": "Typography",
    "elements": [
      {
        "type": "header",
        "content": "Typography"
      },
      {
        "type": "divider"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Dark Font Color",
        "default": "#000"
      },
      {
        "type": "color",
        "id": "text_color_light",
        "label": "Light Font Color",
        "default": "#fff"
      },
      {
        "type": "font_select",
        "label": "Base Font Family",
        "id": "font_family",
        "default": "Open Sans",
        "preset": "google_fonts",
        "options": []
      },
      {
        "type": "font_select",
        "label": "Heading Font Family",
        "id": "heading_font_family",
        "default": "Montserrat",
        "preset": "google_fonts",
        "options": []
      }
    ]
  },
  {
    "name": "Color Scheme",
    "elements": [
      {
        "type": "header",
        "content": "Color Scheme"
      },
      {
        "type": "color",
        "id": "color_primary",
        "label": "Primary",
        "default": "#2e91fc"
      },
      {
        "type": "color",
        "id": "color_offset",
        "label": "Offset",
        "default": "#f9f9f9"
      },
      {
        "type": "color",
        "id": "color_dark",
        "label": "Dark",
        "default": "#30373e"
      },
      {
        "type": "color",
        "id": "color_darker",
        "label": "Darker",
        "default": "#272d34"
      }
    ]
  },
  {
    "name": "Message Colors",
    "elements": [
      {
        "type": "header",
        "content": "Message Colors"
      },
      {
        "type": "color",
        "id": "color_success",
        "label": "Success",
        "default": "#1abc9c"
      },
      {
        "type": "color",
        "id": "color_info",
        "label": "Info",
        "default": "#34495e"
      },
      {
        "type": "color",
        "id": "color_warning",
        "label": "Warning",
        "default": "#f39c12"
      },
      {
        "type": "color",
        "id": "color_danger",
        "label": "Danger",
        "default": "#e74c3c"
      }
    ]
  },
  {
    "name": "General Appearance",
    "elements": [
      {
        "type": "header",
        "content": "General Appearance"
      },
      {
        "type": "color",
        "id": "color_container_bg",
        "label": "Background",
        "default": "#f9f9f9"
      },
      {
        "type": "checkbox",
        "id": "use_bg_img",
        "label": "Use Background Image",
        "default": "false"
      },
      {
        "type": "image_picker",
        "id": "page_background_img",
        "label": "Page Background Image",
        "info": "Suggested dimensions: 2500 × 2500"
      },
      {
        "type": "radio",
        "id": "v_align",
        "label": "Vertical Alignment",
        "default": "top",
        "options": [
          { "label": "Top", "value": "top" },
          { "label": "Middle", "value": "middle" }
        ]
      },
      {
        "type": "radio",
        "id": "body_width",
        "label": "Body Column Width",
        "default": "auto",
        "options": [
          { "label": "Auto", "value": "auto" },
          { "label": "Small", "value": "small" }
        ]
      }
    ]
  }
]
