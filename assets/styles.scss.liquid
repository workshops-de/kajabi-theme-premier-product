      .left-menu, .right-menu {
        display: block;
        float: none;
      }
      a {
        display: block;
        line-height: 40px !important;
        margin:0 0 0 0;
      }
      /*============================================================================
        #Header CTA
      ==============================================================================*/
      .btn-cta {
        line-height: 1.6 !important;
        margin: 10px 0;
      }
    }
    .user {
      width: 100%;
      display: block;
      position: static;
      &__avatar {
        display: none;
      }
      &__dropdown {
        position: static;
        display: block !important;
        text-align: center;
        padding: 0 0 0 0;
        background: transparent !important;
        box-shadow: none;
        border-top: 0;
      }
    }
    &--light {
      .user {
        &__dropdown {
          a {
            color: $font-color-dark;
          }
        }
      }
    }
    &--dark {
      .user {
        &__dropdown {
          a {
            color: $font-color-light;
          }
        }
      }
    }
  }
}
@media (min-width:$md-min) {
  .header {
    .header-menu {
      display: block !important;
    }
  }
}

/*============================================================================
  #Hero Section
==============================================================================*/
.section--hero {
  position: relative;
  text-align: center;
}

/*============================================================================
  #Instructor
==============================================================================*/
.instructor {
  &__image {
    max-width: none;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    margin-top: .5rem;
    margin-bottom: .5rem;
  }
  &__name {
    font-weight: $font-weight-bold;
    margin-top: 0;
    margin-bottom: 0;
  }
  &__title {
    color: $color-primary;
    margin-top: 0;
    margin-bottom: 0;
  }
}

/*============================================================================
  #Player Section
==============================================================================*/
.player {
  margin-bottom: 30px;
  font-size: 0;
  position: relative;
  background: #252525;
  /*============================================================================
    #Player Font Colors
  ==============================================================================*/
  &--dark {
    .playlist {
      color: $font-color-light;
      a {
        color: $font-color-light;
      }
    }
  }
  &--light {
    .playlist {
      color: $font-color-dark;
      a {
        color: $font-color-dark;
      }
    }
  }
  &__video {
    width: 66.6%;
    display: inline-block;
    vertical-align: top;
    .video {
      margin-top: 0;
      margin-bottom: 0;
    }
    img{
      margin-top: 0;
      margin-bottom: 0;
    }
  }
  &__playlist {
    width: 33.3%;
    display: inline-block;
    vertical-align: top;
    position: absolute;
    top: 0;
    bottom: 0;
    overflow: auto;
    &::-webkit-scrollbar {
      width: 10px;
    }
    &::-webkit-scrollbar-track {
      background: #252525;
    }
    &::-webkit-scrollbar-thumb {
      background-color: #757575;
    }
  }
  &__nav {
    display: none;
  }
  .player__nav {
    display: none;
    background: #fff;
    padding: 2rem;
    width: 100%;
    position: relative;
    font-size: 1rem;
    text-align: center;
    color: $font-color-dark;
    p {
      margin: 0 0 0 0;
    }
    .btn {
      white-space: nowrap;
      margin: 0 0 0 0;
      &[disabled] {
        opacity: .3;
        cursor: default;
        &:hover {
          filter: none;
        }
      }
      .fa {
        font-size:.85rem;
      }
      &-prev {
        .fa {
          margin-right: .5rem;
        }
      }
      &-next {
        .fa {
          margin-left: .5rem;
        }
      }
    }
  }
  &--stacked {
    .player__video {
      width: 100%;
    }
    .player__playlist {
      width: 100%;
      position: relative;
    }
  }
  &--simple {
    background: transparent !important;
    .player__video {
      width: 100%;
    }
    .player__playlist {
      display: none;
    }
    .player__nav {
      display: block;
    }
  }
}
.playlist {
  font-size: 16px;
  color: #fff;
  background: #2a2a2a;
  &__title {
    padding: 20px 30px;
    background: #252525;
    h2 {
      font-size: 0.875rem;
      margin:0 0 0 0;
    }
    h3 {
      font-size: 0.75rem;
      margin:0 0 0 0;
      opacity: .6;
      white-space: nowrap;
    }
  }
  &__body {

  }
}
.track {
  padding: 10px 12px;
  display: block;
  margin: 0;
  color: #fff;
  &:hover {
    filter: brightness(115%);
    color: #fff;
  }
  &--active {
    background: #414141;
  }
  &__count {
    font-size: 0.8125rem;
    width: 10px;
    white-space: nowrap;
    &.active {
      color: $color-primary;
      font-weight: 600;
    }
  }
  &__thumb {
    display: block;
    width: 70px;
    height: auto;
    max-width: none;
    margin: 0 0 0 0;
  }
  &__title {
    font-size: 0.8125rem;
    margin:0 0 0 0;
  }
  .progress__bar {
    width: 85px;
    margin-top: .5rem;
    margin-bottom: .5rem;
  }
  &--more {
    text-align: center;
  }
  &__more {
    display: inline-block;
    padding: .5rem 1rem;
    font-weight: bold;
    background: #414141;
    margin: 0;
    font-size: .75rem;
  }
}
.player--none__nav {
  display: none;
  float: right;
  a {
    font-size: 1rem;
    margin-left: 1rem;
    &[disabled] {
      cursor: default;
      opacity: .2;
    }
  }
}
@media (max-width: $md-max) {
  .player {
    background: #fff;
    &__video {
      width: 100%;
    }
    &__playlist {
      width: 100%;
      display: none;
    }
    .player__nav {
      display: block;
      padding: 20px;
    }
  }
}
@media (max-width: $sm-max) {
  .player {
    margin-bottom: 15px;
  }
}

/*============================================================================
  #Search Section
==============================================================================*/
.section--search {
  padding: 25px 0;
  display: none;
}
.search {
  &__toggle {
    cursor: pointer;
  }
  &__icon {
    padding: 0;
    background: transparent;
    border: none;
    &--close {
      cursor: pointer;
    }
  }
  &__input:not([type=checkbox]):not([type=radio]) {
    background: transparent;
    padding: 0 10px !important;
    border: none;
  }
}
.search-result {
  border-top: 1px solid #e5e9ed;
  &__title {
    display: block;
    font-weight: bold;
    text-decoration: underline;
  }
  &:first-of-type {
    border-top: none;
  }
}

$social-icon-font-size: 24px;
$social-icon-container-size: 40px;
$social-icon-spacing: 10px;

.social-icons {
  font-size: 0;
  display: block;
  margin-bottom: 30px;
  text-align: left;
  &__row {
    margin: 0 -$social-icon-spacing;
  }
  &__icon {
    font-family: "FontAwesome" !important;
    font-size: $social-icon-font-size;
    line-height: $social-icon-container-size;
    display: inline-block;
    margin: $social-icon-spacing;
    text-decoration: none;
  }
  &__icon:hover,
  &__icon:focus {
    text-decoration: none;
  }
}

// Social Icon Background Container Style
.social-icons--round,
.social-icons--square {
  .social-icons__icon {
    width: $social-icon-container-size;
    height: $social-icon-container-size;
    text-align: center;
  }
}
.social-icons--round {
  .social-icons__icon {
    border-radius: 50%;
  }
}

// Social Icons Alignment
.social-icons--left {
  text-align: left;
}
.social-icons--center {
  text-align: center;
}
.social-icons--right {
  text-align: right;
}

// Responsive
@media (max-width: $sm-max) {
  .social-icons--left,
  .social-icons--right {
    text-align: center;
  }
}

/*============================================================================
  #Syllabus Section
==============================================================================*/
.syllabus {
  &__heading {
    margin-top: .5rem;
    font-weight: $font-weight-bold;
    .pull-right {
      opacity: .4;
    }
  }
  &__item {
    margin-top: 1.5rem;
    margin-bottom: 1.5rem;
    &--sub {
    }
  }
  &__img {
    width: 125px;
    margin-right: 20px;
    img {
      margin-top: 0;
      margin-bottom: 0;
    }
  }
  &__title {
    margin-top: 0;
    margin-bottom: .25rem;
    font-weight: $font-weight-bold;
    color: $font-color-dark;
  }
  &__text {
    margin-top: .25rem;
    margin-bottom: 0;
    font-size: 0.875rem;
    opacity: .5;
    color: $font-color-dark;
  }
}
@media (max-width: $sm-max) {
  .syllabus {
    .syllabus__title {
      margin-top: .5rem;
    }
    .media {
      .media-left, .media-body, .media-right {
