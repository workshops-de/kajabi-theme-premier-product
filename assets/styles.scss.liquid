.audiojs {
  background: $audio-player-color;
  box-shadow: none;
  font-family: $font-family-default;
  width: 100%;
  height: $player-height;
  overflow: hidden;
  zoom: 1;

  .play-pause,
  .scrubber-container,
  .time {
    display: table-cell;
    vertical-align: top;
    float: none;
    height: $player-height;
    line-height: $player-height;
  }
  .scrubber-container {
    width: 10000px;
    overflow: hidden;
    zoom: 1;
  }

  .scrubber {
    background: darken($audio-player-color, 20%);
    border: none;
    padding: 0;
    margin: 0;
    width: 95%;
    left: 2.5%;
    width: calc(100% - (#{$adjusted-spacing} * 2));
    left: $adjusted-spacing;
    top: $adjusted-spacing;
  }
  .loaded {
    background: darken($audio-player-color, 10%);
  }
  .progress {
    margin: 0;
    background: lighten($audio-player-color, 20%);
  }
  .scrubber,
  .loaded,
  .progress {
    height: $scrubber-height;
  }
  .play-pause {
    padding: 0 20px;
    border: 0;
    background: rgba(0,0,0,0.1);
    cursor: pointer;
  }
  p {
    font-family: "FontAwesome";
    color: #FFF;
    position: relative;
    width: 20px;
    height: auto;
  }
  .play,
  .pause,
  .loading,
  .error {
    background: none;
    text-align: center;
  }
  .play:after { content: "\f04b"; }
  .pause:after { content: "\f04c"; }
  .loading:after { content: "\f021"; }
  .error:after { content: "\f071"; }
  .time {
    margin: 0;
    border: 0;
    padding: 0 10px;
    color: #FFF;
    font-size: 14px;
    text-shadow: none;
    background: rgba(0,0,0,0.1);
  }
}

.audio__playlist {
  text-align: left;
  margin: 0;
  margin-bottom: 30px;
  padding: 0;
  list-style-type: none;
  width: 100%;
  border: 1px solid $audio-player-color;
  border-top: 0;
  background: #2a2a2a;
  li {
    padding: 10px 17px;
    margin-bottom: 0px;
    margin-top: 0px;
  }
